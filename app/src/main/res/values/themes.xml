<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.CredStackView" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryDark">@color/purple_700</item>
    <item name="colorAccent">@color/white</item>
  </style>

  <style name="Heading1" parent="TextViewCommon">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="Heading2" parent="TextViewCommon">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="ProceedButton">
    <item name="android:background">@drawable/cred_proceed_button_bg</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="TextViewCommon">
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/white</item>
  </style>
</resources>